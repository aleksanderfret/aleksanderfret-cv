{
  "name": "aleksanderfret",
  "version": "2.0.1",
  "description": "Event planning application",
  "main": "src/index.js",
  "author": "Aleksander Fret",
  "private": true,
  "scripts": {
    "build": "npm run prod && npm run content",
    "check": "npm-run-all lint format stylelint",
    "content": "node scripts/copyPublicContent.js public dist public/index.html",
    "dev": "webpack serve --mode development --config ./webpack.config.dev.js",
    "format": "prettier --check \"src/**/*.{js,jsx}\"",
    "hooks": "node scripts/enhancePrepareCommitMessage.js",
    "lint": "eslint . --ext \".js,.jsx\"",
    "postinstall": "npm run hooks",
    "prod": "webpack --progress --config ./webpack.config.prod.js",
    "stylelint": "stylelint src/**/*.scss --cache"
  },
  "dependencies": {
    "axios": "0.21.0",
    "core-js": "3.8.0",
    "i18next": "19.8.4",
    "lodash": "4.17.20",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-google-recaptcha": "2.1.0",
    "react-i18next": "11.7.4",
    "react-router-dom": "5.2.0",
    "react-transition-group": "4.4.1",
    "stylelint-webpack-plugin": "2.1.1",
    "validator": "13.5.1"
  },
  "devDependencies": {
    "@babel/cli": "7.12.8",
    "@babel/core": "7.12.9",
    "@babel/plugin-proposal-class-properties": "7.12.1",
    "@babel/preset-env": "7.12.7",
    "@babel/preset-react": "7.12.7",
    "autoprefixer": "10.0.4",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "5.0.1",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-import-resolver-webpack": "0.13.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "6.2.0",
    "fs-extra": "9.0.1",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.0",
    "jimp": "0.16.1",
    "lint-staged": "10.5.2",
    "mini-css-extract-plugin": "1.3.1",
    "node-sass": "5.0.0",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.4",
    "path": "0.12.7",
    "postcss-loader": "4.1.0",
    "prettier": "2.2.1",
    "responsive-loader": "2.2.1",
    "sass-loader": "10.1.0",
    "style-loader": "2.0.0",
    "stylelint": "13.8.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-scss": "3.18.0",
    "terser-webpack-plugin": "5.0.3",
    "url-loader": "4.1.1",
    "webpack": "5.9.0",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0",
    "webpack-manifest-plugin": "3.0.0"
  },
  "browserslist": [
    ">0.5%",
    "not dead",
    "not ie <= 10",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.{js,jsx,json,scss,css,md,html}": "prettier --write",
    "*.{js,jsx}": [
      "eslint -c .eslintrc --fix",
      "echo test"
    ],
    "*.scss": "stylelint --syntax scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check"
    }
  }
}
