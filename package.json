{
  "name": "aleksanderfret",
  "version": "2.0.0",
  "description": "Event planning application",
  "main": "src/index.js",
  "author": "Aleksander Fret",
  "private": true,
  "scripts": {
    "build": "npm run prod && npm run content",
    "check": "npm-run-all lint format stylelint",
    "content": "node scripts/copyPublicContent.js public dist public/index.html",
    "dev": "webpack-dev-server --open --config ./webpack.config.dev.js",
    "format": "prettier --check \"src/**/*.{js,jsx}\"",
    "hooks": "node scripts/enhancePrepareCommitMessage.js",
    "lint": "eslint . --ext \".js,.jsx\"",
    "postinstall": "npm run hooks",
    "prod": "webpack --progress --config ./webpack.config.prod.js",
    "stylelint": "stylelint src/**/*.scss --cache"
  },
  "dependencies": {
    "axios": "0.19.2",
    "core-js": "3.6.5",
    "i18next": "19.6.2",
    "lodash": "4.17.19",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-google-recaptcha": "2.1.0",
    "react-i18next": "11.7.0",
    "react-router-dom": "5.2.0",
    "react-transition-group": "4.4.1",
    "stylelint-webpack-plugin": "2.1.0",
    "validator": "13.1.1"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.10.5",
    "@babel/plugin-proposal-class-properties": "7.10.4",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "autoprefixer": "9.8.5",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "3.6.0",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-webpack": "0.12.2",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.0.8",
    "file-loader": "6.0.0",
    "fs-extra": "9.0.1",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.2.5",
    "jimp": "0.14.0",
    "lint-staged": "10.2.11",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.14.1",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "path": "0.12.7",
    "postcss-loader": "3.0.0",
    "prettier": "2.0.5",
    "responsive-loader": "1.2.0",
    "sass-loader": "9.0.2",
    "style-loader": "1.2.1",
    "stylelint": "13.6.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-scss": "3.18.0",
    "terser-webpack-plugin": "3.0.7",
    "url-loader": "4.1.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "webpack-manifest-plugin": "2.2.0"
  },
  "browserslist": [
    ">0.5%",
    "not dead",
    "not ie <= 10",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.{js,jsx,json,scss,css,md,html}": "prettier --write",
    "*.{js,jsx}": [
      "eslint -c .eslintrc --fix",
      "echo test"
    ],
    "*.scss": "stylelint --syntax scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check"
    }
  }
}
