{
  "name": "aleksanderfret",
  "version": "2.0.0",
  "description": "Event planning application",
  "main": "src/index.js",
  "author": "Aleksander Fret",
  "private": true,
  "scripts": {
    "build": "npm run prod && npm run content",
    "check": "npm-run-all lint format stylelint",
    "content": "node scripts/copyPublicContent.js public dist public/index.html",
    "dev": "webpack-dev-server --open --config ./webpack.config.dev.js",
    "format": "prettier --check \"src/**/*.{js,jsx}\"",
    "lint": "eslint . --ext \".js,.jsx\"",
    "postinstall": "node scripts/enhanceGitHooks.js",
    "prod": "webpack --progress --config ./webpack.config.prod.js",
    "stylelint": "stylelint src/**/*.scss --cache"
  },
  "dependencies": {
    "axios": "0.19.2",
    "core-js": "3.6.4",
    "i18next": "19.3.1",
    "lodash": "4.17.15",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-google-recaptcha": "2.0.1",
    "react-i18next": "11.3.3",
    "react-router-dom": "5.1.2",
    "react-transition-group": "4.3.0",
    "validator": "12.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-react": "7.8.3",
    "autoprefixer": "9.7.4",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-import-resolver-webpack": "0.12.1",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.3",
    "eslint-plugin-react-hooks": "1.7.0",
    "file-loader": "5.1.0",
    "fs-extra": "8.1.0",
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.2.3",
    "jimp": "0.9.3",
    "lint-staged": "10.0.7",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.1",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "path": "0.12.7",
    "postcss-loader": "3.0.0",
    "prettier": "1.19.1",
    "responsive-loader": "1.2.0",
    "sass-loader": "8.0.2",
    "style-loader": "1.1.3",
    "stylelint": "13.2.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-scss": "3.14.2",
    "terser-webpack-plugin": "2.3.5",
    "url-loader": "3.0.0",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-manifest-plugin": "2.2.0"
  },
  "browserslist": [
    ">0.5%",
    "not dead",
    "not ie <= 10",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.{js,jsx,json,scss,css,md,html}": "prettier --write",
    "*.{js,jsx}": [
      "eslint -c .eslintrc --fix",
      "echo test"
    ],
    "*.scss": "stylelint --syntax scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run check"
    }
  }
}
